<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://pngimg.com/uploads/cocktail/cocktail_PNG122.png);">
      <h1 class= "text-center"><%= @cocktail.name %></h1>

      </div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li>
                <%= dose.ingredient.name %> <%= dose.description %>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "      Delete #{dose.ingredient.name} #{dose.description}?" } do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
              <%= simple_form_for @cocktail do |f| %>
                <%= f.input :name %>
                <%= f.input :photo %>
                <%= f.input :photo_cache, as: :hidden %>
                <%= f.submit class: 'btn btn-primary' %>
              <% end %>

              <%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) %>
        </div>
          <%= link_to "See all Cocktails", cocktails_path %>
    </div>
  </div>
</div>
