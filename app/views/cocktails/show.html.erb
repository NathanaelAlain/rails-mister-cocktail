<div class="container">
  <h1> <%= @cocktail.name %></h1>

  <div>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.ingredient.name %> <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name} #{dose.description}?" } do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </li>
      <% end %>
    </ul>

  </div>

  <div>
    <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description, placeholder: "Dose" %>
    <%= f.submit "Add ingredient", class: "btn btn-success" %>
    <% end %>
  </div>
    <%= link_to "See all Cocktails", cocktails_path %>
</div>

